<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->

      <!-- Body text -->
    <item name="android:windowBackground">@color/background</item>
      <!-- Theme color -->
    <item name="colorAccent">@color/theme</item>
      <!-- Date Picker -->
    <item name="android:datePickerStyle">@style/MyDatePicker</item>
  </style>

    <!-- Permision Dialog -->
  <style name="DefaultExplainingPermissionsTheme" parent="Theme.AppCompat.Dialog.Alert">
    <item name="android:background">@color/body</item>
  </style>
    <!-- Date Picker -->
  <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
    <!-- <item name="android:datePickerMode">spinner</item> -->
    <item name="android:headerBackground">@color/theme</item>
  </style>

</resources>
